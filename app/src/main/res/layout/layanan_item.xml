<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/image_tempat"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:src="@drawable/ic_menu_person"/>

        <TextView
            android:id="@+id/nama_tempat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/image_tempat"
            android:layout_toRightOf="@id/image_tempat"
            android:text="Nama Tempat"
            android:textColor="@color/purple_200"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alamat_tempat"
            android:text="alamat"
            android:textColor="@color/purple_200"
            android:textSize="8dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/image_tempat"
            android:layout_toEndOf="@id/image_tempat"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/nama_tempat"/>

        <TextView
            android:id="@+id/notelp_tempat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alamat_tempat"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/image_tempat"
            android:layout_toRightOf="@id/image_tempat"
            android:text="No Telpon"
            android:textColor="@color/purple_200"
            android:textSize="8dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/deskripsi_tempat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notelp_tempat"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/image_tempat"
            android:layout_toRightOf="@id/image_tempat"
            android:text="Text"
            android:textColor="@color/purple_200"
            android:textSize="8dp"
            android:textStyle="bold" />




    </RelativeLayout>



</androidx.cardview.widget.CardView>